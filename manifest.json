{
	"manifest_version": 3,
	"name": "Travian Action Recorder",
	"version": "1.0",
	"description": "Records and automates web actions with scheduling capabilities",
	"permissions": ["activeTab", "tabs", "scripting", "storage", "alarms"],
	"action": {
		"default_popup": "index.html",
		"default_icon": "images/icon.png"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	}
}
