{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "dist", "build", "public", "public/index.html"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 320,
		"formatWithErrors": false,
		"indentWidth": 2,
		"attributePosition": "auto"
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off",
				"useArrowFunction": "off",
				"noUselessTernary": "off"
			},
			"style": {
				"useTemplate": "off",
				"noUselessElse": "off",
				"noVar": "off"
			},
			"suspicious": {
				"noRedundantUseStrict": "off",
				"noAssignInExpressions": "off",
				"noDoubleEquals": "off",
				"noRedeclare": "off"
			},
			"correctness": {
				"noInnerDeclarations": "off",
				"noInvalidUseBeforeDeclaration": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 320,
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded",
			"bracketSameLine": true
		}
	}
}
