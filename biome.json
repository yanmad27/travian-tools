{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": { "ignoreUnknown": false, "ignore": [] },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 150
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 150,
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
